<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title><%= producto.nombre %> - Proyecto Integrador</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
    <link rel="stylesheet" href="/stylesheets/app.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
</head>
<body>

    <%- include("partials/header") %>

    <div class="container products-wrapper">
        <div class="d-flex align-items-center">
            <h2 class="products-title"><%= producto.nombre %></h2>
            <p class="product-detail-description">
                <a href="#">Editar</a>
            </p>
        </div>

        <div class="product-detail">
            <div class="row">
                <article class="col-12 col-lg-8 product-detail-info">
                    <img src="<%= producto.img %>" alt="<%= producto.nombre %>" class="product-detail-img">
                    <p class="product-detail-description">
                        <%= producto.descripcion %>
                    </p>
                </article>

                <div class="col-12 col-lg-4">
                    <section class="comments">
                        <% for (let i = 0; i < comentarios.length; i++) { %>
                            <article>
                                <img src="<%= comentarios[i].img %>" alt="comentario">
                                <div class="data">
                                    <p class="user">
                                        <strong><a href="/perfil"><%= comentarios[i].nombre %></a></strong>
                                        <%= comentarios[i].coment %>
                                    </p>
                                </div>
                            </article>
                        <% } %>
                    </section>

                    <form class="form" action="#" method="POST">
                        <input class="form-input" type="text" name="comentario" placeholder="Agregar comentario" required>
                        <button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
                    </form>
                    <hr>
                </div>
            </div>
        </div>
    </div>

    <%- include("partials/footer") %>

</body>
</html>


